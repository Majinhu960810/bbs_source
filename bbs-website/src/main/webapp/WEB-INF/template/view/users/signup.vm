
    <div id="wrap">
        <div class="container" id="page-main">
            <div class="row">
                <div class='col-md-8 col-lg-8 col-sm-8'>
                    <div class='box'>
                        <div class='cell'>
                            <a class="rabel" href="/">linhuaqian-零花钱社区</a>
                            <span class="chevron">&nbsp;›&nbsp;</span>
                            注册
                        </div>
                        <div class='inner'>
                            <form accept-charset="UTF-8" action="/users/registe.htm" class="simple_form new_user" id="new_user" method="post" novalidate="novalidate">
								#if($errorMsg)
									<div class="form-group ">
                                    <label style="color:red">$!errorMsg</label>
                                </div>
								#end
                                <div class="form-group string required user_nickname">
                                    <label class="string required control-label" for="user_nickname">用户名</label>
